<!-- Views/SetupWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FFGUITool.ViewModels"
        x:Class="FFGUITool.Views.SetupWindow"
        x:DataType="vm:SetupWindowViewModel"
        Title="FFmpeg 配置"
        Width="500" Height="400"
        MinWidth="450" MinHeight="350"
        WindowStartupLocation="CenterOwner"
        CanResize="false">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题和说明 -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="FFmpeg 配置" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="请选择以下方式之一来配置FFmpeg：" 
                       TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 配置选项 -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                
                <!-- 方式1：指定现有的FFmpeg路径 -->
                <Border BorderBrush="Gray" BorderThickness="1" 
                        CornerRadius="5" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="方式1：指定现有的FFmpeg路径" 
                                   FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="如果您已经安装了FFmpeg，请选择ffmpeg可执行文件" 
                                   TextWrapping="Wrap" Foreground="Gray"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding FfmpegPathText}"
                                     Watermark="选择ffmpeg.exe文件..." 
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="浏览" 
                                    Command="{Binding BrowseFFmpegCommand}"
                                    Margin="5,0,0,0"/>
                        </Grid>
                        
                        <Button Content="设置此路径" 
                                Command="{Binding SetCustomPathCommand}"
                                HorizontalAlignment="Left" Width="120"
                                IsEnabled="{Binding !IsProcessing}"/>
                    </StackPanel>
                </Border>

                <!-- 方式2：从压缩包安装 -->
                <Border BorderBrush="Gray" BorderThickness="1" 
                        CornerRadius="5" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="方式2：从压缩包安装FFmpeg" 
                                   FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="选择FFmpeg的zip压缩包，程序将自动解压并安装到应用目录" 
                                   TextWrapping="Wrap" Foreground="Gray"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding ArchivePathText}"
                                     Watermark="选择FFmpeg压缩包..." 
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="浏览" 
                                    Command="{Binding BrowseArchiveCommand}"
                                    Margin="5,0,0,0"/>
                        </Grid>
                        
                        <Button Content="从压缩包安装" 
                                Command="{Binding InstallFromArchiveCommand}"
                                HorizontalAlignment="Left" Width="120"
                                IsEnabled="{Binding !IsProcessing}"/>
                    </StackPanel>
                </Border>

                <!-- 下载提示 -->
                <Border BorderBrush="LightBlue" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Background="#F0F8FF">
                    <StackPanel Spacing="8">
                        <TextBlock Text="💡 获取FFmpeg" FontWeight="Bold" FontSize="14"/>
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="如果您还没有FFmpeg，可以从官方网站下载："/>
                            <LineBreak/>
                            <Run Text="• Windows: https://ffmpeg.org/download.html"/>
                            <LineBreak/>
                            <Run Text="• 建议下载 'Windows builds' 中的静态版本"/>
                            <LineBreak/>
                            <Run Text="• 解压后找到 bin/ffmpeg.exe 文件"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- 状态文本 -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding StatusText}"
                   HorizontalAlignment="Center" Margin="0,10,0,0"
                   FontStyle="Italic" Foreground="Blue"
                   IsVisible="{Binding StatusText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

        <!-- 底部按钮 -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="稍后可以通过菜单重新配置" 
                       VerticalAlignment="Center" Foreground="Gray"/>
            
            <!-- 跳过按钮 -->
            <Button Grid.Column="1" Content="跳过" 
                    Command="{Binding SkipCommand}"
                    Width="80" Height="32" Margin="0,0,10,0"
                    Background="#F5F5F5" 
                    Foreground="#666666"
                    BorderBrush="#CCCCCC"/>
            
            <!-- 确定按钮 -->
            <Button Grid.Column="2" Content="确定" 
                    Command="{Binding ConfirmCommand}"
                    Width="80" Height="32"
                    Background="#007ACC" 
                    Foreground="White"
                    BorderBrush="#005A9B"
                    FontWeight="Bold"
                    IsEnabled="{Binding !IsProcessing}"/>
        </Grid>

    </Grid>
</Window>